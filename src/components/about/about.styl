.about
	background-color #f5efea
	padding-bottom 30px
	h3
		color blue
	&__box
		max-width 320px
		height 200px
		margin-top 30px
		display flex
		flex-direction column
		justify-content flex-end
		align-items flex-end
	&__title
		font 700 45px mainFont
		color #fff
		text-shadow 1px 1px 5px rgba(0, 0, 0, 0.4)
		text-transform uppercase
		margin-right 20px
		margin-bottom 12px
		text-align right
	&__link
		color #fff
		display flex
		justify-content flex-end
		align-items center
		max-width 263px
		font-size 16px
		font-weight 400
		padding-left 20px
	&__arrow
		width 28px
		height 28px
		border-radius 50%
		border 1px solid #fff
		text-align center
		margin 10px
		i
			font-size 16px
			line-height 28px
	&__event
		display flex
		justify-content space-between
		align-items center
		border-top 1px solid #d2cdc9
	&__info
		display flex
	&__date,
	&__desc
		display flex
		flex-direction column
		justify-content center
	&__date
		color green
		margin-right 20px
	&__number
		font-size 32px
		line-height 32px
		font-weight 400
	&__month
		text-transform uppercase
		font-size 14px
		line-height 14px
		font-weight 400
	&__desc
		p
			color salmon
			text-transform uppercase
			font-size 17px
			line-height 14px
			font-weight 400
		span
			font-size 13px
			font-weight 400
		.about__day
			font-weight 600
	&__button
		margin-top 20px
		margin-bottom 20px
	&__description
		font-weight 400
		font-size 14px
	&__more_button
		font-weight 600
		color salmon
		text-transform uppercase
	
@media screen and (max-width: 992px)
	.about
		&__title
			font-size 26px
		&__link
			font-size 13px

@media screen and (max-width: 768px)
	.about
		&__box
			margin auto
			margin-top 30px
