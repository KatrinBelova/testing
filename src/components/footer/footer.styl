.footer
	background-color #515151
	&__title 
		color #f3eeea
		font-size 20px
	&__button
		font-size 18px
		font-family MyriadPro
		line-height 18px
		padding 12px 90px
	&__workTime,
	&__info
		font-weight 400
	&__workTime
		font-size 20px
		color #f3eeea
		margin 0
		line-height 20px
	&__info,
	&__rights
		font-size 12px
		color #b3b3b3
	&__socials
		display flex
	&__item,
	&__link
		width 32px
		height 32px
	&__item
		background-color salmon
		border-radius 50%
		color #515151
		margin-right 8px
	&__link
		display flex
		justify-content center
		align-items center
		font-size 18px
	&__rights
		margin-top 40px
		padding 10px 0 26px 0
		border-top 1px solid #6b6b6a

@media screen and (max-width: 768px)
	.footer
		text-align center
		&__title
			border-top 1px solid #6b6b6a	
			padding-top 10px
		&__socials
			justify-content center
			