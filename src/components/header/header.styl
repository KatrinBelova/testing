.header
	max-width 1030px
	padding-left 15px
	padding-right 15px
	margin auto
	z-index 999
	position relative
	&__wrap
		display flex
		justify-content space-between
		align-items center
		background-color #fff
	&__company
		display flex
	&__logo
		width 58px
		height 58px
		margin-left 17px
	&__name
		text-align center
		p
			font-size 2.375rem
			font-weight 700
			color #727372
			margin 20px 0 0 0
			line-height 0.6
			span
				font-weight 300
	&__location
		font-size 1.188rem
		font-weight 400
		color #1b7f9b
		letter-spacing 5.12px
		text-transform uppercase
		line-height 0
	&__menu
		display flex
		flex-direction column
		align-items flex-end
	&__helpList,
	&__list
		display flex
	&__help
		display flex
		justify-content space-between
		background-color rgba(73,153,174,0.6)
		position relative
		color #fff
		align-items center
		padding-top 5px
		padding-bottom 5px
		margin-top 20px
	&__help::before
		content ''
		position absolute
		top 0
		right -13px
		width 13px
		height 100%
		background-color rgba(73,153,174,0.6)
	&__help::after
		content ''
		position absolute
		top 6px
		right -13px
		width 13px
		height 100%
		background-color rgba(73,153,174,0.6)
		transform skewY(-45deg)
	&__helpList
		font-size 13px
		line-height 13px
		font-weight 400
		display inline-block
	&__helpItem
		border-left 1px solid white
		padding-right 10px
		padding-left 10px
		display inline-block
	&__helpItem:first-child
		border-left none
	input
		background-color transparent
		border none
		position relative
		color #fff
		width 60px
	&__search
		position relative
	.icon-search
		position absolute
		top 0
		right 0
		line-height 20px
		margin-right 5px
	&__list
		text-transform uppercase
		color #668333
		font-weight 400
		font-size 15px
		line-height 15px
		margin-top 28px
		margin-bottom 25px
	&__item
		padding-left 30px
		padding-right 30px
	&__item:last-child
		padding-right 17px
	&__link:hover
		color blue

@media screen and (max-width: 992px)
	.header
		max-width 960px
		&__company
			justify-content center
			
@media screen and (max-width: 768px)
	.header
		max-width 720px
		&__wrap
			flex-direction column
		&__nav
			margin auto
		&__menu
			width 100%
		&__company
			margin-top 15px
		&__logo
			margin-left 0
		&__list	
			margin-top 15px
			margin-bottom 15px
		&__help
			margin-top 0
			
@media screen and (max-width: 576px)
	.header
		max-width 540px
		&__item
			padding-left 10px
			padding-right 10px
		&__nav
			margin 0 auto
		&__item:last-child
			padding-right 10px
			
@media screen and (max-width: 480px)
	.header
		&__list
			font-size 13px
			