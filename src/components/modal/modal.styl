.modal
	position fixed
	display none
	bottom 0
	left 0
	z-index 999
	width 100%
	height 100%
	background-color rgba(0, 0, 0, 0.44)
	&__window
		position absolute
		display flex
		flex-direction column
		align-items center
		left 50%
		top 50%
		transform translate(-50%, -50%)
		padding 46px 46px 35px
		max-width 463px
		max-height 348px
		box-shadow 1px 2px 24px rgba(0, 0, 0, 0.4)
		background-color #ffffff
	&__title
		color #4999af
		font 700 24px MyriadPro
		text-transform uppercase
		margin-top 0
	&__desc,
	&__message
		opacity 0.6
		color #5f5f5f
		font-weight 400
		fony-family MyriadPro
	&__desc
		font-size 16px
	&__form
		display flex
		flex-direction column
		align-items flex-start
	&__exit
		position absolute
		top 8px
		right 13px
		width 14px
		height 14px
		color #000
		line-height 16px
		font-size 16px
	&__input
		width 371px
		height 59px
		border 1px solid #b1b2b1
		margin-top 15px
		margin-bottom 15px
		border-radius 5px
		background-color #f5f5f5
	input::placeholder
		font 400 22px MyriadPro
		color #999999
		padding-left 23px
	&__message
		font-size 14px
		font-style italic
		margin-bottom 25px
	&__button
		padding 20px 70px
		font 400 18px 'Arial'
		line-height 0
		margin auto
		
@media screen and (max-width: 560px)
	.modal
		&__window
			padding 23px 23px 17px
			max-width 280px
			max-height 348px
		&__title
			font-size 20px
		&__input
			width 250px
			height 40px
		