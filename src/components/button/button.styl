.button
  position relative
  top 0
  display inline-flex
  align-items center
  justify-content center
  vertical-align bottom
  height 33px
  padding 8px 20px
  border 0
  border-radius 4px
  font-size 11px
  color #f3eeea
  background-color blue
  font-weight 400
  line-height 11px
  text-transform uppercase
  text-align center
  cursor pointer
  text-decoration none
  transition .2s
  &:hover
    opacity .9
  &_block
    width 100%
  &_lg
    min-height 2.5rem
    padding .5rem 1.35rem
    font-size 1.5rem
